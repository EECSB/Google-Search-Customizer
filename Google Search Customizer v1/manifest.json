{
  "manifest_version": 2,

  "name": "Google Search Customizer",
  "description": "This extension gives you the ability to customize how your google search results look like.",
  "version": "1.0",
  "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "16": "icon16.png"
  },

  "browser_action": {
    "default_icon": "icon16.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [{
    "matches": [
      "*://*.google.com/*"
    ],
    "js": ["program.js"]
  }],

  "background": {
    "scripts": ["background.js"]
  },

  "permissions": [
    "storage"
  ]
}